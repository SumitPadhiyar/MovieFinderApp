<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="2dp"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv__movie_details_cardview__title_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Title:"/>

        <TextView
            android:id="@+id/tv__movie_details_cardview__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv__movie_details_cardview__title_placeholder"
            android:layout_alignBaseline="@id/tv__movie_details_cardview__title_placeholder"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            tools:text="Breaking Bad" />

        <TextView
            android:id="@+id/tv__movie_details_cardview__genre_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv__movie_details_cardview__title"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Genre:"/>

        <TextView
            android:id="@+id/tv__movie_details_cardview__genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv__movie_details_cardview__genre_placeholder"
            android:layout_alignBaseline="@id/tv__movie_details_cardview__genre_placeholder"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            tools:text="American drama" />

        <TextView
            android:id="@+id/tv__movie_details_cardview__plot_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv__movie_details_cardview__genre"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Plot:"/>

        <TextView
            android:id="@+id/tv__movie_details_cardview__plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv__movie_details_cardview__plot_placeholder"
            android:layout_alignBaseline="@id/tv__movie_details_cardview__plot_placeholder"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            tools:text="American drama series" />

        <TextView
            android:id="@+id/tv__movie_details_cardview__release_date_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv__movie_details_cardview__plot"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Release Date:"/>

        <TextView
            android:id="@+id/tv__movie_details_cardview__release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv__movie_details_cardview__release_date_placeholder"
            android:layout_alignBaseline="@id/tv__movie_details_cardview__release_date_placeholder"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            tools:text="20 July 2009" />

        <TextView
            android:id="@+id/tv__movie_details_cardview__rating_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv__movie_details_cardview__release_date"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Rating:"/>

        <RelativeLayout
            android:id="@+id/rl__movie_details_cardview__progressbar_container"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/tv__movie_details_cardview__rating_placeholder"
            android:layout_alignTop="@id/tv__movie_details_cardview__rating_placeholder"
            android:layout_marginLeft="4dp">

            <ProgressBar
                android:id="@+id/pb__movie_details_cardview__progress_bar_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="10"
                android:progress="0"
                android:progressDrawable="@drawable/circular_progress_bar" />

            <TextView
                android:id="@+id/tv__movie_details_cardview__progress_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0.0"
                android:gravity="center"
                android:textColor="#b0f89a"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>